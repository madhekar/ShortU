- attributes("title") ="Welcome to the Scala Url Shortener" 
-@ val displayForm: Boolean = false
-@ val link: String = ""
-@ val oldLink: String = ""

- attributes("title") = "ShortU: a tiny, Url or Link application with Scalatra"

- if (displayForm == true)
  .row
    .col-md-4.col-md-offset-4
      p= "Not a valid link try again"
      p= "The link received was:"
      pre{:style => "white-space:normal;"}
        a{:href => oldLink} #{oldLink}

  .row
    .col-md-4.col-md-offset-4
      - render("form.jade")
- else
  .row
    .col-md-6.col-md-offset-3
      h3= "Shortened Link"
      pre{:style => "white-space:normal;"}
        a{:href => link} #{link}
  .row
    .col-md-6.col-md-offset-3
      h3= "This is the link shortened!"
      pre{:style => "white-space:normal;"}
        a{:href => oldLink} #{oldLink}
  .row
    .col-md-6.col-md-offset-3
      h3= "Shorten Another"
  .row
    .col-md-4.col-md-offset-4
      - render("form.jade")

